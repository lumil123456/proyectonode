extends layout
block content
include carrusel
 -if(room.length>0)
  section(id="uno",class="container")
  section#main-slider.no-margin
   div(class="carousel slide wet-asphalt")
    div(class="carousel-inner")
     div(class="item active", style="background-image: url(/images/slider/bg1.jpg)")
      div(class="container")
       div(class="row")
        div(class="col-sm-12")
         div(class="carousel-content centered")
          h2(class="animation animated-item-1") Crear Sala
          div(class="row")
           aside(class="col-sm-4 col-sm-push-8")
           
           div(class="col-sm-8 col-sm-pull-4")
            div(class="blog")
             div(class="blog-item",style="background-image: url(/images/form/form2.jpg)")
              div(class="container page")
               div(class="row")
                div(class="col-xs-2")
                div(class="col-xs-8")
                 section(id="crearsala", class="container")
                  div(class="row")
                   div(class="col-sm-6")
                    h2 Crear Nueva Partida
                    form(class="center",role="form", action="/espera/")
                      div(class="form-group")
                        label(class="sr-only" for="ejemplo_titulo_1" class="col-lg-2 control-label") Titulo
                        div(class="col-lg-10")
                          input(type="titulo" class="form-control" id="ejemplo_titulo_1" placeholder="Partida del Invitado-510f")
                    
                        label(for="ejemplo_titulo_2" class="col-lg-2 control-label") Tipo de partida
                        div(class="col-lg-offset-2 col-lg-10")
                          div(class="radio")
                            label
                              input#rpublico(type="radio" name="ropcion" value="1" checked)
                              label(for='publico') Publico
                          div(class="radio")
                            label
                              input#rprivado(type="radio" name="ropcion" value="2")
                              label(for='privado') Privado
                  
                        label(for="ejemplo_titulo_3" class="col-lg-2 control-label") Preguntas
                        div(class="col-lg-10")
                          select(class="form-control")
                            option 5
                            option 10
                            option 20
                            option 50
                            option 100

                      div(class="row")
                        label(for="ejemplo_titulo_4" class="col-lg-2 control-label") Tiempo de respuesta
                        div(class="col-lg-10")
                          select(class="form-control")
                            option 5 segundos
                            option 10 segundos
                            option 15 segundos
                            option 20 segundos
                            option 30 segundos
                            option 35 segundos
                            option 40 segundos
                            option 45 segundos
                            option 50 segundos
                            option 55 segundos 
                            option 60 segundos
                    
                        label(for="ejemplo_titulo_5" class="col-lg-2 control-label") Categorias
                        div(class="col-lg-10")
                          div(class="checkbox")
                            label
                              input#rarteyliteratura(type="checkbox" name="opciones" value="3" checked)
                              label(for='arteyliteratura') Arte y Literatura
                          div(class="checkbox")
                            label
                              input#rcineytelevision(type="checkbox" name="opciones" value="4" checked)
                              label(for='cineytelevision') Cine y Television
                          div(class="checkbox")
                            label
                              input#rgeografia(type="checkbox" name="opciones" value="5" checked) 
                              label(for='geografia') Geografia
                          div(class="checkbox")
                            label
                              input#rhistoria(type="checkbox" name="opciones" value="6" checked) 
                              label(for='historia') Historia
                          div(class="checkbox")
                            label
                              input#rmiscelania(type="checkbox" name="opciones" value="7" checked)
                              label(for='miscelania') Miscelania
                          div(class="checkbox")
                            label
                              input#rmusica(type="checkbox" name="opciones" value="8" checked)
                              label(for='musica') Musica
                          div(class="checkbox")
                            label
                              input#rcienciaynaturaleza(type="checkbox" name="opciones" value="9" checked)
                              label(for='cienciaynaturaleza') Ciencia y Naturaleza
                          div(class="checkbox")
                            label
                              input#rdeporte(type="checkbox" name="opciones" value="10" checked) 
                              label(for='deporte') Deporte
                      div(class="col-sm-6")
                        h2 Partidas 
                        div
                          div(class="progress")
                            div(class="progress-bar progress-bar-danger", role="progressbar", aria-valuenow="90", aria-valuemin="0", aria-valuemax="100", style="width: 90%;")
                              span Partidas Ganadas
                          div(class="progress")
                            div(class="progress-bar progress-bar-success", role="progressbar", aria-valuenow="70", aria-valuemin="0", aria-valuemax="100", style="width: 70%;")
                              span Partidas Perdidas
                          div(class="progress")
                            div(class="progress-bar", role="progressbar", aria-valuenow="40", aria-valuemin="0", aria-valuemax="100", style="width: 40%;")
                              span Partidas Empatadas
                      
                      div(class="form-group")
                        div(class="col-lg-offset-9 col-lg-3")
                          div(class="caption")
                            button(type="submit", class="btn btn-primary",value="crear")
                              span(class="glyphicon glyphicon-save") Crear Partida
                            button(type="submit" class="btn btn-default",value="Cancelar")
                              span(class="glyphicon glyphicon-save") Cancelar

    div#content